import pandas as pd
from sklearn.model_selection import train_test_split

# Load the CSV
df = pd.read_csv("C:/Users/kelgr/Desktop/MSc/Dissertation/Training Data/TrainingData/training_data.csv") 

# Ensure you have a 'class' column or similar for stratification
train_df, test_df = train_test_split(df, test_size=0.2, stratify=df['class'], random_state=42)

# Save to new CSV files
train_df.to_csv("C:/Users/kelgr/Desktop/MSc/Dissertation/Training Data/TrainingData/train_80.csv", index=False)
test_df.to_csv("C:/Users/kelgr/Desktop/MSc/Dissertation/Training Data/TrainingData/test_20.csv", index=False)
